<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark Theme -->
    <style name="CustomDarkTheme" parent="Theme.Material3.Dark">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/actionbar_blue</item>
        <item name="colorPrimaryVariant">@color/actionbar_blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/actionbar_blue</item>
        <item name="colorSecondaryVariant">@color/actionbar_blue</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Action bar styling -->
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="actionBarStyle">@style/CustomActionBar.Dark</item>

        <!-- General theme colors -->
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/light_gray</item>

        <!-- Additional dark theme specific colors -->
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnBackground">@color/white</item>

        <!-- Card and dialog backgrounds -->
        <item name="cardBackgroundColor">@color/dark_surface</item>
        <item name="materialCardViewStyle">@style/CustomCardView.Dark</item>
    </style>

    <!-- Custom style for Action Bar in Dark theme -->
    <style name="CustomActionBar.Dark" parent="Widget.Material3.ActionBar.Solid">
        <item name="background">@color/black</item>
        <item name="titleTextStyle">@style/ActionBarTitleText.Dark</item>
    </style>

    <!-- Custom style for Action Bar Title in Dark theme -->
    <style name="ActionBarTitleText.Dark" parent="TextAppearance.Material3.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Custom CardView style for Dark theme -->
    <style name="CustomCardView.Dark" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">@color/dark_surface</item>
        <item name="rippleColor">@color/ripple_dark</item>
    </style>
</resources>